{
  "name": "scalable-read-heavy-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:build": "docker build -t scalable-read-heavy-api:latest .",
    "docker:load:kind": "kind load docker-image scalable-read-heavy-api:latest --name scalable-read-heavy-api",
    "k8s:kind:create": "kind create cluster --name scalable-read-heavy-api --config kind-config.yaml",
    "k8s:kind:delete": "kind delete cluster --name scalable-read-heavy-api",
    "k8s:build-and-load": "npm run docker:build && npm run docker:load:kind",
    "k8s:up:local": "kind create cluster --name scalable-read-heavy-api --config kind-config.yaml || true && npm run k8s:build-and-load && kubectl apply -k k8s/overlays/local",
    "k8s:deploy:test": "kubectl apply -k k8s/overlays/test",
    "k8s:deploy:stage": "kubectl apply -k k8s/overlays/stage",
    "k8s:deploy:prod": "kubectl apply -k k8s/overlays/prod",
    "k8s:deploy:local": "kubectl apply -k k8s/overlays/local",
    "k8s:delete:test": "kubectl delete -k k8s/overlays/test",
    "k8s:delete:stage": "kubectl delete -k k8s/overlays/stage",
    "k8s:delete:prod": "kubectl delete -k k8s/overlays/prod",
    "k8s:delete:local": "kubectl delete -k k8s/overlays/local",
    "k8s:status:test": "kubectl get all -n scalable-read-heavy-api-test",
    "k8s:status:stage": "kubectl get all -n scalable-read-heavy-api-stage",
    "k8s:status:prod": "kubectl get all -n scalable-read-heavy-api-prod",
    "k8s:status:local": "kubectl get all -n scalable-read-heavy-api-local",
    "k8s:pods:test": "kubectl get pods -n scalable-read-heavy-api-test",
    "k8s:pods:stage": "kubectl get pods -n scalable-read-heavy-api-stage",
    "k8s:pods:prod": "kubectl get pods -n scalable-read-heavy-api-prod",
    "k8s:pods:local": "kubectl get pods -n scalable-read-heavy-api-local",
    "k8s:logs:test": "kubectl logs -n scalable-read-heavy-api-test -l component=api --tail=50 -f",
    "k8s:logs:stage": "kubectl logs -n scalable-read-heavy-api-stage -l component=api --tail=50 -f",
    "k8s:logs:prod": "kubectl logs -n scalable-read-heavy-api-prod -l component=api --tail=50 -f",
    "k8s:logs:local": "kubectl logs -n scalable-read-heavy-api-local -l component=api --tail=50 -f",
    "k8s:hpa:test": "kubectl get hpa -n scalable-read-heavy-api-test",
    "k8s:hpa:stage": "kubectl get hpa -n scalable-read-heavy-api-stage",
    "k8s:hpa:prod": "kubectl get hpa -n scalable-read-heavy-api-prod",
    "k8s:db:test": "kubectl get statefulset,svc -n scalable-read-heavy-api-test | grep postgres",
    "k8s:db:stage": "kubectl get statefulset,svc -n scalable-read-heavy-api-stage | grep postgres",
    "k8s:db:prod": "kubectl get cluster -n scalable-read-heavy-api-prod",
    "k8s:db:local": "kubectl get statefulset,svc -n scalable-read-heavy-api-local | grep postgres",
    "k8s:describe:test": "kubectl describe deployment -n scalable-read-heavy-api-test",
    "k8s:describe:stage": "kubectl describe deployment -n scalable-read-heavy-api-stage",
    "k8s:describe:prod": "kubectl describe deployment -n scalable-read-heavy-api-prod",
    "k8s:describe:local": "kubectl describe deployment -n scalable-read-heavy-api-local",
    "k8s:port-forward:local": "kubectl port-forward -n scalable-read-heavy-api-local svc/local-api 3000:80",
    "k8s:port-forward:test": "kubectl port-forward -n scalable-read-heavy-api-test svc/test-api 3000:80",
    "k8s:port-forward:stage": "kubectl port-forward -n scalable-read-heavy-api-stage svc/stage-api 3000:80",
    "k8s:port-forward:prod": "kubectl port-forward -n scalable-read-heavy-api-prod svc/prod-api 3000:80"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}